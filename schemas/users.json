{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "users",
  "properties": {
    "addresses": {
      "type": "object",
      "properties": {
        "itemKey": { "type": "string" },
        "itemValue": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "zip_code": { "type": "integer" },
            "phones": {
              "type": "array",
              "items": [{ "type": "string" }]
            }
          }
        }
      }
    },
    "direct_reports": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "firstname": { "type": "string" },
            "lastname": { "type": "string" }
          }
        }
      ]
    },
    "id": { "type": "string" },
    "name": {
      "type": "object",
      "properties": {
        "firstname": { "type": "string" },
        "lastname": { "type": "string" }
      }
    }
  }
}
